@model IEnumerable<BillyCasperGAssignment.Models.Costumer>
@{
    ViewBag.Title = "Results";
}

<div>
    @using (Html.BeginForm("Export", "Costumers", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-8" style="padding-top:10px;">
                @*<button asp-page-handler="Export">Export</button>*@
                <input type="submit" value="Export" class="btn" />
            </div>
        </div>
    }
</div>
<h2>Costumers</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Created On</th>
        <th>Modified On</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Phone</th>
        <th>Email</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costumer_LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costumer_FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costumer_City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costumer_State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costumer_zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costumer_Homephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costumer_InternetEmail)
            </td>
        </tr>
    }
</table>

